<h3>Relatório de faturamento mensal</h3>
<hr>
<table class="table table-striped table-hover" style="width: 100%">
    <thead>
    <tr>
        <th>Período</th>
        <th>Valor</th>
    </tr>
    </thead>
    <tbody>
    {% for fat in faturamento %}
    <tr>
        <td>{{ fat.data_cadastro|date("m/Y") }}</td>
        <td>R$ {{ fat.faturamento|number_format(2, ",", ".") }}</td>
    </tr>
    {% else %}
    <tr>
        <td colspan="2" class="table-warning">Nenhum faturamento para esse período</td>
    </tr>
    {% endfor %}
    </tbody>
</table>